{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go API",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/api",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "showLog": true
    },
    {
      "name": "Debug Go API (Current File)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Debug Go Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env.test",
      "args": [
        "-test.v"
      ]
    },
    {
      "name": "Debug Current Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "envFile": "${workspaceFolder}/.env.test"
    }
  ]
}
